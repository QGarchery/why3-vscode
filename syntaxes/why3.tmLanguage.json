{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Why3",
  "patterns": [
    {
      "include": "#constructor"
    },
    {
      "include": "#keyword"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#comment"
    },
    {
      "include": "#import"
    },
    {
      "include": "#quantifiers"
    },
    {
      "include": "#definition"
    }
  ],
  "repository": {
    "keyword": {
      "patterns": [
        {
          "match": "\\b(abstract|any|as|break|by|continue|else|epsilon|exception|fun|ghost|ref|if|in|lavel|meta|model|mutable|not|partial|private|raise|return|so|then|type|while|for|to|downto|do|done|try|match|with|begin|end|label|module|theory|scope)\\b",
          "name": "keyword.control"
        },
        {
          "match": "\\b(true|false)",
          "name": "constant.numeric"
        },
        {
          "match": "\\b\\d(\\d|_)*",
          "name": "constant.numeric"
        },
        {
          "match": "\\b0[xX]\\h(\\h|_)+",
          "name": "constant.numeric"
        },
        {
          "match": "\\b0[oO][0-7]([0-7]|_)+",
          "name": "constant.numeric"
        },
        {
          "match": "\\b0[bB][01]([01]|_)+",
          "name": "constant.numeric"
        },
        {
          "match": "\\b\\d+[eE][-+]?\\d+",
          "name": "constant.numeric"
        },
        {
          "match": "\\b(absurd|alias|assert|assume|check|diverges|ensures|invariant|pure|raises|reads|requires|returns|variant|writes)\\b",
          "name": "entity.other.attribute-name"
        },
        {
          "match": "(->|<->|/\\\\|\\\\/|&&|<-|\\+|-|\\*|/|\\=|>|<)",
          "name": "keyword.control"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "match": "\\\\.",
          "name": "constant.character.escape"
        }
      ]
    },
    "comment": {
      "name": "comment.block",
      "begin": "\\(\\*",
      "end": "\\*\\)",
      "patterns": [{ "include": "#comment" }]
    },
    "variableDeclaration": {
      "begin": "\\(",
      "patterns": [
        {
          "match": ","
        },
        {
          "match": "([^:,\\(\\)]*):?(((?<=:)[^:,\\)]*)?)",
          "captures": {
            "1": {
              "name": "variable.parameter"
            },
            "2": {
              "name": "support.type"
            }
          }
        }
      ],
      "end": "\\)"
    },
    "definition": {
      "patterns": [
        {
          "begin": "\\b((?:\\s*(?:let\\s+rec|let\\s+ref|let|ghost|function|predicate|inductive|coinductive|val|constant|lemma))+)\\s+([a-zA-Z0-9_\\']+|\\([^\\)]+\\))",
          "beginCaptures": {
            "1": {
              "name": "keyword.control"
            },
            "2": {
              "name": "variable.parameter"
            }
          },
          "patterns": [
            {
              "include": "#variableDeclaration"
            },
            {
              "begin": ":",
              "patterns": [
                {
                  "include": "#variableDeclaration"
                },
                {
                  "match": "[^\\)\\(=\\]]+",
                  "name": "support.type"
                }
              ],
              "end": "(?=$|=)"
            },
            {
              "match": "([a-zA-Z0-9_\\']+)",
              "name": "variable.parameter"
            }
          ],
          "end": "(?=$|=)"
        },
        {
          "match": "\\b(lemma|axiom|goal)\\s+([a-zA-Z0-9_\\']+)\\s*:",
          "captures": {
            "1": {
              "name": "keyword.control"
            },
            "2": {
              "name": "variable.parameter"
            }
          }
        }
      ]
    },
    "quantifiers": {
      "begin": "\\b(forall|exists)\\b",
      "beginCaptures": {
        "1": {
          "name": "keyword.control"
        }
      },
      "patterns": [
        {
          "match": ","
        },
        {
          "match": "([^:,\\.]*):?(((?<=:)([^:,\\.]|\\.[^\\s])*)?)",
          "captures": {
            "1": {
              "name": "variable.parameter"
            },
            "2": {
              "name": "support.type"
            }
          }
        }
      ],
      "end": "\\.\\s"
    },
    "import": {
      "begin": "\\b(use|clone)\\b",
      "beginCaptures": {
        "1": {
          "name": "keyword.control"
        }
      },
      "end": "\\b(\\w+\\.)*(?=[A-Z])",
      "endCaptures": {
        "1": {
          "name": "support.type"
        }
      },
      "patterns": [
        { "match": "\\b(import|export)\\b", "name": "keyword.control" }
      ]
    },
    "constructor": {
      "match": "[A-Z][a-zA-Z0-9_\\']*",
      "name": "support.type"
    }
  },
  "scopeName": "source.mlw"
}
